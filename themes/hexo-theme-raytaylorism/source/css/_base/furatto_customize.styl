html
    font-family: "Lato", "sans-serif", "微软雅黑", "Helvetica Neue"
    background color-background
    background color-background linear-gradient(#00ADE3, #080046, #000000) fixed

body
    background color-body
    padding-top 0

html, body
    height auto
    overflow auto

p 
    color color-font

a
    color color-a
    transition color .5s

a:hover
    color color-a-hover
    transition color .5s

a.btn
    transition background-color .5s

a.btn:hover
    color #fff
    transition background-color .5s

li
    line-height 30px

.btn
    border none
    font-size normal-font-size
    padding 4px 10px

.btn-large
    padding 10px 18px

.btn-info
    background-color #16a085

.btn-info:hover
    background-color #1abc9c