article
    font-size normal-font-size

    .article-title h1
        color color-title
        font-size 2em
        font-weight bold
        line-height 1.4
        margin 0
        padding 20px 0

        a
            color color-title

        a:hover
            color color-title-hover

    .simple-article-title h1
        font-size simple-title-font-size
        padding 5px 0

    .tags-row
        margin-top 10px

        a
            margin 2px 2px

    /* simple_article CSS start */
    .date-row
        color color-font
        margin 10px 0
        font-size normal-font-size

    /* simple_article CSS end */                
    
    .prev, .next
        position absolute
        top 0
        width 50%
        height 100%
        cursor pointer
        &:before
            position absolute
            font 24px/1 font-icon
            text-align center
            width 24px
            text-shadow 0 0 15px rgba(0,0,0,0.5)
            color #fff
            margin-top -12px
            top 50%

    header
        border-radius 0
        background none
        position relative
        padding 0
        border-bottom 0
        margin-bottom 10px

        time
            font 0.9em font-title
            margin-bottom 5px
            display block
            line-height 1

        &:hover
            color color-link

    .entry
        // text-align justify
        line-height 1.6

        h1, h2, h3, h4, h5, h6
            margin 0.6em 0

        h1
            font-size 1.6em
            color color-entry-subtitle

        h2
            font-size 1.4em
            color color-entry-subtitle

        h3, h4, h5, h6
            font-size 1.2em
            color color-entry-subtitle

        blockquote
            margin 0 -30px 20px
            padding 15px 20px 1px 40px
            font-style italic
            background #ccc
            background rgba(0, 0, 0, 0.06)
            color #222

          &.nstyle
            border-radius 0
            padding 0
            background none
            box-shadow none

        iframe
            max-width 98%

        .caption
            display block
            margin-top 5px
            color #aaa
            position relative
            font-size 0.9em
            padding-left 25px
            &:before
                content '\f040'
                position absolute
                font 1.3em font-icon
                position absolute
                left 0
                top 3px
