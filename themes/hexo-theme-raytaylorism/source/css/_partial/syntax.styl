color-code-background = #042029
color-simple-code-background = #93AAAC

article
    pre
        padding 10px 16px

    code, pre
        font-family font-mono
        color #333
        font-size 1em
        white-space pre-wrap
        word-wrap break-word

    code
        background color-code-background
        font-size 16px

    p code, li code
        color #fff
        padding 4px

code 
    background color-simple-code-background

pre .keyword
    color #859900

pre .tag
    color #f8f8f2

